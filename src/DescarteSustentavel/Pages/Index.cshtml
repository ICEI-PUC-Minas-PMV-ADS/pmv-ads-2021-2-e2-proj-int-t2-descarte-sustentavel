                                <input class="botao_secundario form-group col-12 btn" value="Voltar" style="height: 50px; font-family: Montserrat" onclick="voltarModal('cadastro', 1)">
                            </div>
                        </div>
                        <div id="cadastro-passo-2" style="display: none;">
                            <div class="cabecalho_modal" style="display:flex; flex-flow:column; align-items:flex-start;">
                                <h2 style="font-family: 'Rubik', sans-serif; font-size: 1.4em; color: #212529">
                                    CADASTRE-SE
                                </h2>
                                <div style="display: flex; flex-wrap: nowrap; align-items:flex-start;">
                                    <span style="width: 75px; height: 5px; background-image: linear-gradient(to right,#00FFB9, #00A4FF); border-radius: 100em; margin: 0 0 18px;">
                                    </span>
                                </div>
                                <p class="modal_label" style="font-family: Montserrat Regular; font-size:0.8em">
                                    Nos conte um pouco sobre você:
                                </p>
                            </div>
                            <input type="text" class="form-control input_modal" style="height: 50px; font-family: 'Montserrat'; font-size: 0.7em;" asp-for="NomeCadastro" placeholder="Insira seu nome completo" />
                            <input type="text" class="form-control input_modal" style="height: 50px; margin-top: 20px; font-family: 'Montserrat'; font-size: 0.7em;" asp-for="EmailCadastro" placeholder="Digite aqui seu email" />
                            <span class="text-danger">@Html.ValidationMessage("EmailDuplicado")</span>

                            @if (Model.TipoDeUsuario == "Ecoponto")
                            {
                                <input type="text" class="form-control input_modal" style="height: 50px; margin-top: 20px; font-family: 'Montserrat'; font-size: 0.7em;" asp-for="CpfOuCnpjCadastro" placeholder="Insira seu CPF/CNPJ" />
                            }

                            @*<p>Nome completo</p>
                                <input class="form-control input_modal" style="height:50px" asp-for="NomeCadastro" />
                                <p>Endereco</p>
                                <input class="form-control input_modal" style="height:50px" asp-for="EmailCadastro" />
                                <p>Telefone</p>
                                <input class="form-control input_modal" style="height:50px" asp-for="TelefoneCadastro" />
                                <p id="ecoponto-1" style="display: none;">CPF ou CNPJ</p>
                                <input class="form-control" id="ecoponto-2" asp-for="CpfOuCnpjCadastro" style="display: none;" />*@

                            <div class="botoes_proximo_voltar" style="display:flex; flex-direction: row; flex-wrap: wrap; margin-top: 20px">
                                <input id="nextBtn" class="botao_principal form-group col-12 btn" value="Próximo" style="height: 50px; font-family: Montserrat" onclick="avancarModal('cadastro', 2)">
                                <input class="botao_secundario form-group col-12 btn" value="Voltar" style="height: 50px; font-family: Montserrat" onclick="voltarModal('cadastro', 2)">
                            </div>
                        </div>
                        <div id="cadastro-passo-3" style="display: none;">
                            <div class="cabecalho_modal" style="display:flex; flex-flow:column; align-items:flex-start;">
                                <h2 style="font-family: 'Rubik', sans-serif; font-size: 1.4em; color: #212529">
                                    CADASTRE-SE
                                </h2>
                                <div style="display: flex; flex-wrap: nowrap; align-items:flex-start;">
                                    <span style="width: 75px; height: 5px; background-image: linear-gradient(to right,#00FFB9, #00A4FF); border-radius: 100em; margin: 0 0 18px;">
                                    </span>
                                </div>
                                <p class="modal_label" style="font-family: Montserrat Regular; font-size:0.8em">
                                    Quase lá! Agora vamos criar uma senha:
                                </p>
                            </div>
                            <input type="password" class="form-control input_modal" style="height: 50px; font-family: 'Montserrat'; font-size: 0.7em;" asp-for="SenhaCadastro" placeholder="Insira sua senha" />
                            <input type="password" class="form-control input_modal" style="height: 50px; margin-top: 20px; font-family: 'Montserrat'; font-size: 0.7em;" placeholder="Confirme a Senha" />
                            <span class="text-danger">@Html.ValidationMessage("DadosErrados")</span>
                            @*<p>Email</p>
                                <input type="email" class="form-control input_modal" style="height:50px" asp-for="EmailCadastro" />
                                <span class="text-danger">@Html.ValidationMessage("EmailDuplicado")</span>
                                <p>Senha</p>
                                <input type="password" class="form-control input_modal" style="height:50px" asp-for="SenhaCadastro" />
                                <span class="text-danger">@Html.ValidationMessage("DadosErrados")</span>*@

                            <div class="botoes_proximo_voltar" style="display:flex; flex-direction: row; flex-wrap: wrap; margin-top: 20px">
                                <input type="submit" id="nextBtn" class="botao_principal form-group col-12 btn" style="height: 50px; font-family: Montserrat" asp-page-handler="Cadastrar" value="Concluir Cadastro">
                                <input class="botao_secundario form-group col-12 btn" value="Fazer Login" style="height: 50px; font-family: Montserrat" onclick="voltarModal('cadastro', 3)">
                            </div>

                            @*<input type="submit" class="btn  btn-primary" asp-page-handler="Cadastrar" value="Cadastrar" />*@
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .flex-container-flex {
        display: flex;
        justify-content: center;
        flex-flow: row;
        flex-wrap: nowrap;
        margin-top: 0;
        width: 100vw;
        margin-bottom: 10%
    }

    .flex-container {
        display: flex;
        flex-flow: row;
        flex-wrap: wrap;
        margin-top: 0;
        width: fit-content;
        justify-content: center
    }

    #informacoes_gerais {
        display: flex;
        justify-content: space-around;
        align-items: baseline;
        flex-direction: row;
        text-align: center;
        color: #00A4FF;
        background-color: #F7FFFA;
        font-family: 'Montserrat', sans-serif;
        font-weight: 300;
        padding: 40px 10px;
        width: 100%;
    }

    #banner {
        width: 100%;
    }

    .titulo_informacoes_gerais {
        font-size: 1.5em;
        color: #006DFF;
    }

    .icons_informacoes {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        flex-direction: column;
        align-items: center;
    }

    .icons_informacoes > p {
        max-width: 85%;
    }

    .icons_informacoes > img {
        width: 7vw;
    }

    .frase_informacoes_gerais {
        font-family: 'Montserrat', sans-serif;
        font-size: 1.2em;
        color: #006DFF;
    }

    #ultimas_noticias {
        width: 80%
    }

    .titulo_sessao {
        font-family: 'Rubik', sans-serif;
        font-size: 1.5em;
        margin: 50px 0 6px 0;
    }

    .corpo_fita {
        display: flex;
        flex-wrap: nowrap;
        align-items: center;
        justify-content: start;
    }

    .fita_colorida {
        width: 75px;
        height: 5px;
        background-image: linear-gradient(to right,#00FFB9, #00A4FF);
        border-radius: 100em;
        margin: 0 0 25px;
    }

    #corpo_noticias {
        display: flex;
        justify-content: flex-start;
        align-items: baseline;
        flex-direction: column;
        align-content: center;
        margin: 0 0 25px;
    }

    .caixa_noticia {
        background-color: #F7FFFA;
        display: flex;
        flex-direction: row;
        border-style: solid;
        border-color: #00FFB9;
        border-width: 1px;
        margin-bottom: 2%;
    }

    .foto_manchete {
        width: 10em;
        height: 10em;
    }

    .textos_manchete {
        display: flex;
        flex-wrap: wrap;
        align-content: space-evenly;
        padding: 0 15px;
    }

    .titulo_manchete {
        font-weight: 600;
        display: flex;
        flex-direction: row;
        color: #8C8C8C;
        text-align: left;
        font-family: Montserrat;
        font-size: 1.3em;
        margin: 3px 8px 0px;
    }

    .texto_noticia {
        display: flex;
        flex-direction: row;
        color: #8C8C8C;
        text-align: left;
        font-family: Montserrat Regular;
        margin: 0 8px;
        text-align: justify;
    }

    .botao_cadastrar, .botao_secundario {
        padding: 3px 0;
        border: 2px solid #005AFF;
        border-radius: 8px;
        color: #005AFF;
        cursor: pointer;
        background-color: #FFF;
    }

    .botao_login:hover, .botao_principal:hover {
        background-image: linear-gradient(to right,#00FFB9, #00A4FF);
        color: white;
        transition: 0.2s;
        font-weight: 800;
    }

    .botao_login, .botao_principal {
        padding: 3px 0;
        border: #005AFF;
        border-radius: 8px;
        background-color: #005AFF;
        color: white;
    }

    .botao_cadastrar:hover, .botao_secundario:hover {
        background-color: #00A4FF;
        color: white;
        border: 1px solid #00A4FF;
        transition: 0.7s;
        font-weight: 400;
    }

    .action {
        position: absolute;
        top: 20px;
        right: 150px;
    }


        .action .profile {
            position: relative;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            overflow: hidden;
            cursor: pointer;
        }

            .action .profile img {
                position: relative;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .action .menu {
            position: absolute;
            top: 60px;
            right: -10px;
            padding: 10px 0px;
            background: #fff;
            width: 21.5vw;
            border-radius: 6px;
            transition: 0, 5s;
            visibility: hidden;
            opacity: 0;
            margin-block-end: 220%;
        }

            .action .menu.active {
                height: min-content;
                top: 60px;
                visibility: visible;
                opacity: 1;
            }
            /*deixa o menu visivel*/

            .action .menu::before {
                content: '';
                position: absolute;
                top: -5px;
                right: 28px;
                width: 20px;
                height: 20px;
                background: #fff;
                transform: rotate(45deg);
            }

            .action .menu .container {
                width: 100%;
                text-align: center;
                padding: 0px;
                font-weight: 100;
                font-size: 18px;
                color: #555;
                line-height: 1.2em;
            }


            .action .menu #regForm {
                background-color: #ffffff;
                margin: 0px auto;
                font-family: Raleway;
                padding: 10px;
                border-radius: 10px
            }

            .action .menu h1 {
                text-align: left;
                margin-block-end: 10px;
            }

    .menu, .action {
        box-shadow: 0 4px 8px 0 rgba(100, 100, 100, 0.2);
        border-radius: 5px;
    }

    #regForm {
        flex-wrap: wrap;
    }

    h1 {
        font-family: 'Rubik', sans-serif;
        padding: 30px 0 10px 0;
    }

</style>

