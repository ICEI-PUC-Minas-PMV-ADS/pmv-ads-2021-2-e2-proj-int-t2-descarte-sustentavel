                                        <div>
                                            <input style="margin-top: 20px" type="radio" asp-for="TipoDeUsuario" value="@tipoUser" />
                                            <label style="font-family: Montserrat; font-size: 0.8em" asp-for="TipoDeUsuario">@tipoUser</label>
