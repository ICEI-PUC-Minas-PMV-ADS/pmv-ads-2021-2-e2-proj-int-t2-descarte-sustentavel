                        <div id="botoes_login_cadastre-se" style="display:flex; flex-direction: row; flex-wrap: wrap; margin-top: 20px">
                            <input class="botao_login botao_principal form-group col-12 btn" value="Login" type="submit" asp-page-handler="Logar" form="corpo_formulario_cadastro_solicitacao" style="height: 50px; font-family: Montserrat">
