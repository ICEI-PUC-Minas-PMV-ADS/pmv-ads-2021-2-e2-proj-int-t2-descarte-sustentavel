                            <p class="link">
                                <a href="#" id="btnn" >Não tem conta? Cadastre-se</a>
                            </p>*@
                    </form>
                </div>
                <!--Começo Cadastro-->
                <div class="col-md-12" id="cadastro" style="display: none;">
                    <form id="cadastro" method="post">
                        <div id="cadastro-passo-1">
                            <div class="cabecalho_modal" style="display:flex; flex-flow:column; align-items:flex-start;">
                                <h2 style="font-family: 'Rubik', sans-serif; font-size: 1.4em; color: #212529">
                                    CADASTRE-SE
